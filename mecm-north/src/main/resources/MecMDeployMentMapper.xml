<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.edgegallery.mecmNorth.repository.mapper.MecMDeploymentMapper">
    <resultMap id="BaseResultMap" type="org.edgegallery.mecmNorth.repository.MecMPackageDeploymentInfo">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="mecm_package_id" property="mecmPackageId" jdbcType="VARCHAR"/>
        <result column="host_ip" property="hostIp" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Deployment_Column_List">
        id
        , mecm_package_id, host_ip, status
    </sql>

    <insert id="insertPkgDeploymentInfo" parameterType="org.edgegallery.mecmNorth.repository.MecMPackageDeploymentInfo">
        insert into pkg_deployment_table (id, mecm_package_id, host_ip, status)
        values (#{id,jdbcType=VARCHAR}, #{mecmPackageId,jdbcType=VARCHAR}, #{hostIp,jdbcType=VARCHAR},
                #{status,jdbcType=VARCHAR})
    </insert>

    <delete id="deletePkgDeploymentInfoByPkgId" parameterType="String">
        delete
        from pkg_deployment_table
        where mecm_package_id = #{mecmPkgId,jdbcType=VARCHAR}
    </delete>

    <update id="updateMecmPkgDeploymentInfo"
            parameterType="org.edgegallery.mecmNorth.repository.MecMPackageDeploymentInfo">
        update pkg_deployment_table
        set mecm_package_id = #{mecmPkgId,jdbcType=VARCHAR},
            host_ip         = #{hostIp,jdbcType=VARCHAR},
            status          = #{status,jdbcType=VARCHAR}
        where id = #{id,jdbcType=VARCHAR}
    </update>

    <select id="getMecMPkgDeploymentInfoById" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Deployment_Column_List"/>
        from pkg_deployment_table
        where id = #{id,jdbcType=VARCHAR}
    </select>

    <select id="getMecMPkgDeploymentInfoByPkgId" resultType="String" parameterType="java.util.List">
        select id
        from pkg_deployment_table
        where mecm_package_id = #{mecmPkgId,jdbcType=VARCHAR}
    </select>

</mapper>